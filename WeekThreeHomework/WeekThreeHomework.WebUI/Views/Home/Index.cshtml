@model ArticleListViewModel

@foreach (var article in Model.Articles)
{
    <div class="card mb-3">
        <img src="~/blogresim.jpg" class="img-fluid" >
        <div class="card-body">
            <h5 class="card-title">@article.Title</h5>
            <p class="card-text">@article.Content</p>
            <a asp-controller="Home" asp-action="Details" asp-route-id="@article.Id" class="btn btn-primary btn-sm">Details...</a>
        </div>
        <div class="card-footer">
            <p class="card-text"><small class="text-muted">Author ~ @article.Author</small></p>
        </div>
    </div>
}


<div class="mt-2">
    <ul class="pagination">
        @for (int i = 1; i <= Model.PageCount; i++)
        {
            <li class="page-item @(i == Model.CurrentPage ? "active":"")">
                <a class="page-link" href="/home/index?page=@i&categoryId=@Model.CurrentCategory">@i</a>
            </li>
        }
    </ul>
</div>